{
  "name": "@localwebcafe/responsive-tabs",
  "version": "1.0.0",
  "description": "A responsive tabs component for React with mobile dropdown support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localwebcafe/responsive-tab.git"
  },
  "publishConfig": {
